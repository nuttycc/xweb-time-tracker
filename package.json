{
  "name": "web-time-tracker",
  "description": "web time tracker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build": "wxt build",
    "zip": "wxt zip",
    "check": "concurrently \"eslint --max-warnings=0 .\" \"vue-tsc --noEmit\"",
    "fix": "eslint --fix .",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration tests/database",
    "test:perf": "vitest run tests/boundary tests/performance",
    "postinstall": "wxt prepare",
    "prepare": "husky"
  },
  "dependencies": {
    "@vueuse/core": "^13.3.0",
    "@webext-core/messaging": "^2.3.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.11",
    "es-toolkit": "^1.39.3",
    "loglevel": "^1.9.2",
    "loglevel-plugin-prefix": "^0.8.4",
    "psl": "^1.15.0",
    "uuid": "^11.1.0",
    "vue": "^3.5.16",
    "vue-i18n": "^11.1.6",
    "vue-router": "^4.5.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@eslint/js": "^9.28.0",
    "@itoxiq/vue-tsc-files": "^1.2.0",
    "@midudev/tailwind-animations": "^0.2.0",
    "@tailwindcss/vite": "^4.1.8",
    "@types/jsdom": "^21.1.7",
    "@types/psl": "^1.1.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@wxt-dev/module-vue": "^1.0.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.28.0",
    "eslint-plugin-vue": "^10.2.0",
    "fake-indexeddb": "^6.0.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "oxlint": "^1.0.0",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.1.8",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.34.0",
    "vitest": "^3.2.4",
    "vitest-chrome": "^0.1.0",
    "vitest-mock-extended": "^3.1.0",
    "vue-tsc": "^2.2.10",
    "wxt": "^0.20.7"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    }
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,tsx,vue}": [
      "eslint --fix"
    ],
    "**/*.{vue,ts,tsx}": [
      "vue-tsc-files --noEmit"
    ],
    "**/*.{ts,tsx,vue}": [
      "vitest related --run"
    ]
  }
}
