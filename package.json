{
  "name": "web-time-tracker",
  "description": "web time tracker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint --fix src/ ",
    "format": "prettier --write src/",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "vue-tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration tests/database",
    "test:boundary": "vitest run tests/boundary",
    "test:performance": "vitest run tests/performance",
    "test:database": "vitest run tests/database",
    "test:watch": "vitest --watch",
    "test:bench": "vitest bench",
    "postinstall": "wxt prepare",
    "prepare": "husky"
  },
  "dependencies": {
    "@vueuse/core": "^13.3.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.11",
    "es-toolkit": "^1.39.3",
    "nanoid": "^5.1.5",
    "psl": "^1.15.0",
    "vue": "^3.5.16",
    "vue-i18n": "^11.1.6",
    "vue-router": "^4.5.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@eslint/js": "^9.28.0",
    "@midudev/tailwind-animations": "^0.2.0",
    "@tailwindcss/vite": "^4.1.8",
    "@vitest/coverage-v8": "^3.2.4",
    "@wxt-dev/module-vue": "^1.0.2",
    "eslint": "^9.28.0",
    "eslint-plugin-vue": "^10.2.0",
    "fake-indexeddb": "^6.0.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "oxlint": "^1.0.0",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.1.8",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.34.0",
    "vitest": "^3.2.4",
    "vitest-chrome": "^0.1.0",
    "vue-tsc": "^2.2.10",
    "wxt": "^0.20.7"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "biome lint --write --no-errors-on-unmatched",
    "**/*.{json,js,ts,jsx,tsx,html,vue}": "prettier --write --ignore-unknown"
  }
}
